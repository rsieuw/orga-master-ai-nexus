<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Radiale gradient achtergrond -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="50%p"
                android:startColor="@color/splash_gradient_center_color"
                android:endColor="@color/splash_background_color" />
        </shape>
    </item>
    <!-- Nieuwe splash afbeelding - met verbeterde centerInside en inset voor betere schaling -->
    <item
        android:gravity="center"
        android:drawable="@drawable/splash_new"
        android:width="220dp"
        android:height="220dp" />
</layer-list> 